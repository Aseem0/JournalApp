@inherits LayoutComponentBase
@inject JournalApp.Services.ThemeService ThemeService
@inject JournalApp.Services.SecurityService Security
@implements IDisposable

<MudThemeProvider Theme="_theme" IsDarkMode="@ThemeService.IsDarkMode" />
<MudPopoverProvider />
@* Needed for dialogs *@
<MudDialogProvider />
@* Needed for snackbars *@
<MudSnackbarProvider />

@if (IsLocked)
{
    <JournalApp.Components.Shared.LockScreen OnUnlocked="Unlock" />
}

<MudLayout>
    <MudDrawer Open="true" Variant="DrawerVariant.Responsive" Elevation="1" Anchor="Anchor.Start" Class="mud-width-300">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-0">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool IsLocked = true;

    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Black = "#000000",
            Background = "#000000",
            Surface = "#000000",
            DrawerBackground = "#000000",
            AppbarBackground = "#000000",
            TextPrimary = "#ffffff",
            TextSecondary = "#b2b2b2",
            ActionDefault = "#ffffff"
        }
    };

    protected override async Task OnInitializedAsync()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
        
        var hasPin = await Security.IsPinSetAsync();
        IsLocked = hasPin && !Security.IsAuthenticated;
    }

    private void Unlock()
    {
        IsLocked = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}

